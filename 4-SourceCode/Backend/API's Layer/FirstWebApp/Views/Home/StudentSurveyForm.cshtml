@model FirstWebApp.Models.StudentSurvey
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container mt-4" style="max-width: 500px;">
	<h1 class="mb-4">Student Survey</h1>
	<form method="post" class="border p-4 rounded shadow-sm">
		<div class="mb-3">
			<label class="form-label">Student Name:</label>
			<input type="text" name="StudentName" class="form-control" required />
		</div>
		<div class="mb-3">
			<label class="form-label">Major:</label>
			<input type="text" name="Major" class="form-control" required />
		</div>
		<div class="mb-3">
			<label class="form-label">Level:</label>
			<input type="number" name="Level" class="form-control" required />
		</div>
		<div class="mb-3">
			<label class="form-label">Feedback:</label>
			<textarea name="Feedback" class="form-control" rows="4" required></textarea>
		</div>
		<button class="btn btn-dark mt-2">Submit</button>
	</form>
</div>
